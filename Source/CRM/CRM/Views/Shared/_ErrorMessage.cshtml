@{
    string error = string.Empty;
    if (ViewData != null)
    {
        if (ViewData["error"] != null)
        {

            error = ((CRM.Helper.Error)ViewData["error"]).description;
        }
    }

}
@if (error != string.Empty)
{
    <script>
        var options = options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
        toastr.success('@error', options);
    </script>
}