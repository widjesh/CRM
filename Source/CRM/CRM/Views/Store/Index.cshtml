@model IEnumerable<CRM.Entities.Store>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nmStore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nmStore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.abbrevationCountry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idStore">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idStore">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idStore">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
