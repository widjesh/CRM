@model CRM.Entities.Store

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2>Edit</h2>

<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idStore" />
            <div class="form-group">
                <label asp-for="nmStore" class="control-label"></label>
                <input asp-for="nmStore" class="form-control" />
                <span asp-validation-for="nmStore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCountry" class="control-label"></label>
                <select asp-for="idCountry" class="form-control" asp-items="ViewBag.idCountry"></select>
                <span asp-validation-for="idCountry" class="text-danger"></span>
            </div>
            <partial name="/Views/Address/Edit.cshtml" for="Address" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

