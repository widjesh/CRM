@section Scripts{
    @if (statisticsList.Count != 0)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>
        <script>
        var ctx = document.getElementById('myChart');
        var data = {
            labels: ['Open', 'Completed', 'Closed'],
            datasets: [{
                label: '# of Tickets',
