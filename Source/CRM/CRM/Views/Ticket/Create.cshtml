@model CRM.Entities.Ticket

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2>Create</h2>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="deTicket" class="control-label"></label>
                <textarea asp-for="deTicket" class="form-control"></textarea>
                <span asp-validation-for="deTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idStaffAssignedTo" class="control-label"></label>
                <select asp-for="idStaffAssignedTo" class="form-control" asp-items="ViewBag.idStaffAssignedTo">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>
            @if (Model.idCustomer == 0)
            {
                <partial name="/Views/Customer/_Create.cshtml" for="Customer" />
            }
            else
            {
                <input asp-for="idCustomer" type="hidden" />
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

