@model CRM.Entities.Ticket

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2>Edit</h2>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idTicket" />
            <input type="hidden" asp-for="idCustomer" />
            <div class="form-group">
                <label asp-for="deTicket" class="control-label"></label>
                <input asp-for="deTicket" class="form-control" />
                <span asp-validation-for="deTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dtOpening" class="control-label"></label> <br />
                <label class="control-label">@Model.dtOpening.ToShortDateString()</label>
                <span asp-validation-for="dtOpening" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dtClosing" class="control-label"></label> <br />
                <label class="control-label">@(Model.dtClosing == null ? "" : Model.dtClosing.Value.ToShortDateString())</label>
                <span asp-validation-for="dtClosing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dtDue" class="control-label"></label> <br />
                <label class="control-label">@Model.dtDue.ToShortDateString()</label>
                <span asp-validation-for="dtDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idStaffAssignedTo" class="control-label"></label>
                <select asp-for="idStaffAssignedTo" class="form-control" asp-items="ViewBag.idStaffAssignedTo">
                    <option value="0">--SELECT--</option>
                </select>
                <span asp-validation-for="idStaffAssignedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idTicketStatus" class="control-label"></label>
                <select asp-for="idTicketStatus" class="form-control" asp-items="ViewBag.idTicketStatus"></select>
                <span asp-validation-for="idTicketStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

